    <!-- hiệu ứng scroll img product -->

    <script>
        const ulImg = document.getElementsByClassName("product-detail-images-images")[0];
        const liImage = document.getElementsByClassName("product-detail-images-thumbnails-li");
        const lengthBar = document.getElementsByClassName("product-detail-images__progress-bar-progress")[0];


        lengthBar.style.height = `${100/(liImage.length)}%`;
        const scrollImages = document.getElementsByClassName("product-detail-images-images")[0];

        scrollImages.addEventListener("mouseover", function(e) {
            scrollImages.addEventListener('wheel', function(e) {
                e.preventDefault();
                const heightImg = document.getElementsByClassName("product-detail-images-image-wrapper")[0].offsetHeight;
                const lengthBar = document.getElementsByClassName("product-detail-images__progress-bar-progress")[0];
                const lengthHeightBar = Math.round(100 / (liImage.length));
                const simulator = Math.round(document.getElementsByClassName("product-detail-images__progress-bar-progress")[0].offsetHeight / document.getElementsByClassName("product-detail-images__progress-bar")[0].offsetHeight * 100);


                if (e.wheelDelta >= 0) {
                    const index = Math.round((simulator * liImage.length) / 100) - 1;
                    // up
                    if (index == 1) {
                        lengthBar.style.height = `${(index)*100/(liImage.length)}%`;
                        ulImg.style.transform = `translateY(0px)`;
                    }
                    if (index > 1) {
                        lengthBar.style.height = `${(index)*100/(liImage.length)}%`;
                        ulImg.style.transform = `translateY(-${heightImg*(index-1)}px)`;
                    }
                } else {
                    const index = Math.round((simulator * liImage.length) / 100) + 1;
                    // down
                    if (index <= liImage.length) {
                        if (index == 1) {
                            lengthBar.style.height = `${100/(liImage.length)}%`;
                        } else {
                            lengthBar.style.height = `${(index)*100/(liImage.length)}%`;
                        }
                        ulImg.style.transform = `translateY(-${heightImg*(index-1)}px)`;
                    }
                }
            }, {
                passive: false
            })
        })

        scrollImages.addEventListener("mouseleave", function(e) {
            scrollImages.addEventListener('wheel', function(e) {
                console.log('hellooo mouse out')
                    // add custom scroll code if you want
            }, {
                passive: true
            })
        })
    </script>

